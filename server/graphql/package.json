{
  "name": "react-relay-rescript-boilerplate-graphql",
  "description": "",
  "version": "1.0.0",
  "author": "Søren Høyer <sorenhoyer84@gmail.com> (https://www.linkedin.com/in/sorenhoyer/)",
  "dependencies": {
    "@types/cors": "^2.8.10",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0-experimental-stream-defer.1",
    "graphql-relay": "^0.6.0",
    "merge-graphql-schemas": "^1.7.3"
  },
  "devDependencies": {
    "@sorenhoyer/eslint-config-base": "^1.1.1",
    "@sorenhoyer/prettier-config": "^1.1.0",
    "@types/express": "^4.17.11",
    "@types/graphql-relay": "^0.6.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@sorenhoyer/eslint-config-base"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "js": "never"
        }
      ]
    },
    "ignorePatterns": [
      ".vscode",
      "coverage",
      "dist",
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged"
    }
  },
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "package-lock.json": [
      "git rm --cached"
    ]
  },
  "prettier": "@sorenhoyer/prettier-config",
  "scripts": {
    "build": "yarn tsc && node dist/index.js",
    "create-env": "node scripts/create-env.js",
    "lint": "eslint src/**/*.{js,ts}",
    "lint-fix": "eslint src/**/*.{js,ts} --fix",
    "start": "nodemon",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch"
  }
}
